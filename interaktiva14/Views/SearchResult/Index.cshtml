@model interaktiva14.Models.ViewModels.SearchResultViewModel


<body class="subpage">
		<div id="page-wrapper">
			<!-- Content -->
				<section id="content">
					<div class="container">
						<div class="row">
							<div class="col-12">
								<!-- Main Content -->
									<!-- Features -->
									<section id="features">
										<div class="container">
											<div class="row">	
												@for (var i = 0; i < Model.Movies.Count; i++)
                            					{
													<div class="col-4">
														<!-- Feature #1 -->
														<section>
															
															<h1>@Html.DisplayFor(model => model.Movies[@i].Title)</h1>
															<img src=@Model.Movies[@i].Poster alt=@Model.Movies[@i].Title>
															<h1>@Html.DisplayFor(model => model.Movies[@i].Year)</h1>
															<h1 class="number-of-likes-@(i)">Number of Likes: @Model.Movies[@i].NumberOfLikes</h1>
                                							<h1 class="number-of-dislikes-@(i)">Number of Dislikes: @Model.Movies[@i].NumberOfDislikes</h1>
															<button id="likeBtn">Like</button>
															<div class="description">
																<div class="expandMoreContent" id="showMoreContent@(i)"> 
																	<p>@Model.Movies[@i].Plot</p>
																</div>
																<div class="expandMoreHolder">
																	<span expand-more data-hidetext="Show Less..." data-showtext="Show More..." data-target="showMoreContent@(i)" class="btn-expand-more">...Show More</span>
																</div>
															</div>

															
														</section>
													</div>
												}
											</div>
										</div>
									</section>
							</div>
						</div>
					</div>
				</section>
</body>

<script type="text/javascript" src="~/js/site.js"></script>