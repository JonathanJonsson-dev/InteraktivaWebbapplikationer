@model interaktiva14.Models.ViewModels.HomeViewModel

<body>
    
    <div id="page-wrapper">
        <div id="banner">
            <h1 class="toplist-header">Top 5 movies right now!</h1>
            <div class="container">
                <div class="row">
                    <div class="col-6 col-12-medium">
                        <!-- Banner Copy -->
                        <h1>1. @Model.Toplist[0].Title</h1>
                        
                        <h3>Genre: @Model.Toplist[0].Genre</h3>
                        <h3>Released: @Model.Toplist[0].Released</h3>
                        <h3>Director: @Model.Toplist[0].Director</h3>
                        <h3>IMDd rating: @Model.Toplist[0].Ratings[0].Value)</h3>
                        <h3 class="number-of-likes-0">Number of Likes: @Model.Toplist[0].NumberOfLikes</h3>
                        <h3 class="number-of-dislikes-0">Number of Dislikes: @Model.Toplist[0].NumberOfDislikes</h3>
                        <div class="likedislikebuttons">
                            <input class="likebutton" id="likebutton0" type="button" value="Like ♥"/>
                            <button type="button" class="btn btn-success" onclick=myFunction()>Like ♥</button>
                            <input class="dislikebutton" id="dislikebutton0" type="button" value="Dislike"/>
                        </div>
                        
                        <div class="description">
                            <div class="expandMoreContent" id="showMoreContent0"> 
                                <p>@Model.Toplist[0].Plot</p>
                            </div>
                            <div class="expandMoreHolder">
                                <span expand-more data-hidetext="Show Less..." data-showtext="Show More..." data-target="showMoreContent0" class="btn-expand-more">...Show More</span>
                            </div>
                        </div>
                        
                    </div>
                    <div class="col-6 col-12-medium imp-medium">

                        <!-- Banner Image -->
                            <a href="#" id="imageFirstMovie" class="bordered-feature-image"><img src=@Model.Toplist[0].Poster alt=@Model.Toplist[0].Title /></a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Features -->
        <section id="features">
            <div class="container">
                <div class="row">

                    @for (int i = 1; i < 5; i++)
                    {
                        <div class="col-3 col-6-medium col-12-small">

                            <!-- Feature #1 -->
                            <section>
                                <a href="#" class="bordered-feature-image"><img src=@Model.Toplist[@i].Poster alt=@Model.Toplist[@i].Title /></a>
                                <h2>@(i+1). @Model.Toplist[@i].Title</h2>
                                <h3>Genre: @Model.Toplist[@i].Genre</h3>
                                <h3>Released: @Model.Toplist[@i].Released</h3>
                                <h3>Director: @Model.Toplist[@i].Director</h3>
                                <h3>IMDd rating: @Model.Toplist[@i].Ratings[0].Value)</h3>
                                <h3 class="number-of-likes-@(i)">Number of Likes: @Model.Toplist[@i].NumberOfLikes</h3>
                                <h3 class="number-of-dislikes-@(i)">Number of Dislikes: @Model.Toplist[@i].NumberOfDislikes</h3>
                                <div class="likedislikebuttons">
                                    <input class="likebutton" id="likebutton@(i)" type="button" value="Like ♥"/>
                                    <input class="dislikebutton" id="dislikebutton@(i)" type="button" value="Dislike"/>
                                 </div>

                                <div class="description">
                                    <div class="expandMoreContent" id="showMoreContent@(i)"> 
                                        <p>@Model.Toplist[@i].Plot</p>
                                    </div>
                                    <div class="expandMoreHolder">
                                        <span expand-more data-hidetext="Show Less..." data-showtext="Show More..." data-target="showMoreContent@(i)" class="btn-expand-more">...Show More</span>
                                    </div>
                                </div> 
                               
                            </section>

                        </div>
                    }
                </div>
            </div>
        </section>
    </div>
</body>
